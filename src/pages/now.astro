---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import FooterSignature from "@components/FooterSignature.astro";
import "@styles/global.css";
import "@styles/prose.css";

// Get the latest now entry
const nowEntries = await getCollection("now");
const latestEntry = nowEntries.sort(
  (a, b) => new Date(b.data.lastUpdated).getTime() - new Date(a.data.lastUpdated).getTime()
)[0];

const { Content } = await latestEntry.render();
const { title, description, lastUpdated } = latestEntry.data;

// Format the date for display
const formatDate = (date: Date | string): string => {
  const dateObj = date instanceof Date ? date : new Date(date);
  return dateObj.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<Layout
  title={`${title} - Morris Liu`}
  description={description ||
    "What Morris Liu is focused on right now: AI infrastructure work, WebGL explorations, bass playing, and current interests. Updated regularly."}
  imageAlt="Morris Liu's current activities and focus areas"
>
  <div class="mx-auto max-w-2xl px-6 py-16">
    <div class="space-y-8 leading-relaxed">
      <div>
        <h1 class="text-text-primary mb-2 font-serif text-4xl leading-tight">
          {title}
        </h1>
        <p class="text-text-tertiary text-sm">
          Last updated {formatDate(lastUpdated)}
        </p>
      </div>

      <div class="prose prose-lg prose-gray max-w-none">
        <div class="text-text-secondary space-y-6 text-lg">
          <Content />
        </div>
      </div>
    </div>

    <FooterSignature>
      <nav class="mt-2 flex items-center justify-between">
        <a href="/" class="text-text-link text-sm font-medium hover:underline">
          ← Back to main page
        </a>
        <a href="/now/archive" class="text-text-link text-sm font-medium hover:underline">
          View past updates →
        </a>
      </nav>
    </FooterSignature>
  </div>
</Layout>
