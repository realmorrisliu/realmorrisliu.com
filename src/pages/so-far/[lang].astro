---
import Layout from "../../layouts/Layout.astro";
import TimelineItem from "../../components/TimelineItem.astro";
import ProjectItem from "../../components/ProjectItem.astro";
import Link from "../../components/Link.astro";
import FooterSignature from "../../components/FooterSignature.astro";
import FormattedText from "../../components/FormattedText.astro";
import { getLanguageFromURL, getTranslations, getLangSwitchUrl, getHtmlLangAttribute } from "../../i18n/utils";
import "../../styles/global.css";

// Get language from path parameter
const { lang } = Astro.params;
const currentLang = lang === 'zh' ? 'zh' : 'en';
const t = getTranslations(currentLang);
const htmlLang = getHtmlLangAttribute(currentLang);

// Generate language switch URLs
const enUrl = '/so-far';
const zhUrl = '/so-far/zh';

// Define static paths for generation
export function getStaticPaths() {
  return [
    { params: { lang: 'zh' } },
  ];
}
---

<Layout
  title={t.soFar.meta.title}
  description={t.soFar.meta.description}
  lang={htmlLang}
>
  <div class="mx-auto max-w-2xl px-6 py-16">
    <header class="mb-16">
      <div class="mb-6 flex items-center justify-between">
        <h1 class="font-serif text-4xl leading-tight">
          {t.soFar.title}
        </h1>
        <div class="flex items-center gap-1 text-sm">
          <Link href={enUrl} class={`font-medium ${currentLang === 'en' ? 'text-[color:var(--color-text-primary)]' : 'text-[color:var(--color-text-tertiary)]'}`}>
            EN
          </Link>
          <span class="text-[color:var(--color-border)]">|</span>
          <Link href={zhUrl} class={`font-medium ${currentLang === 'zh' ? 'text-[color:var(--color-text-primary)]' : 'text-[color:var(--color-text-tertiary)]'}`}>
            中文
          </Link>
        </div>
      </div>

      <nav class="mb-8 flex flex-wrap gap-4">
        <Link href="#work" class="text-sm text-[color:var(--color-text-secondary)]">
          {t.soFar.nav.work}
        </Link>
        <Link href="#projects" class="text-sm text-[color:var(--color-text-secondary)]">
          {t.soFar.nav.projects}
        </Link>
        <Link href="#skills" class="text-sm text-[color:var(--color-text-secondary)]">
          {t.soFar.nav.skills}
        </Link>
        <Link href="#side" class="text-sm text-[color:var(--color-text-secondary)]">
          {t.soFar.nav.side}
        </Link>
        <Link href="#contact" class="text-sm text-[color:var(--color-text-secondary)]">
          {t.soFar.nav.contact}
        </Link>
      </nav>

      <!-- Summary description -->
      <div class="space-y-4">
        <p class="text-lg leading-relaxed text-[color:var(--color-text-secondary)]">
          {t.soFar.description}
        </p>
      </div>
    </header>

    <section id="work" class="mb-16">
      <h2 class="mb-4 font-serif text-2xl leading-tight">
        {t.soFar.work.title}
      </h2>

      <div class="mb-8">
        <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
          {t.soFar.work.description}
        </p>
      </div>

      <div class="relative">
        <!-- Continuous timeline line -->
        <div
          class="absolute top-0 bottom-0 left-0 w-px"
          style="background-color: var(--color-border);"
        >
        </div>

        <div class="space-y-8">
          <TimelineItem
            year={t.soFar.work.positions.fullStackEngineer2024.year}
            title={t.soFar.work.positions.fullStackEngineer2024.title}
            company={t.soFar.work.positions.fullStackEngineer2024.company}
            period={t.soFar.work.positions.fullStackEngineer2024.period}
            description={t.soFar.work.positions.fullStackEngineer2024.description}
          />

          <TimelineItem
            year={t.soFar.work.positions.cto.year}
            title={t.soFar.work.positions.cto.title}
            company={t.soFar.work.positions.cto.company}
            period={t.soFar.work.positions.cto.period}
            description={t.soFar.work.positions.cto.description}
          />

          <TimelineItem
            year={t.soFar.work.positions.techLead.year}
            title={t.soFar.work.positions.techLead.title}
            company={t.soFar.work.positions.techLead.company}
            period={t.soFar.work.positions.techLead.period}
            description={t.soFar.work.positions.techLead.description}
          />

          <TimelineItem
            year={t.soFar.work.positions.fullStackEngineer2019.year}
            title={t.soFar.work.positions.fullStackEngineer2019.title}
            company={t.soFar.work.positions.fullStackEngineer2019.company}
            period={t.soFar.work.positions.fullStackEngineer2019.period}
            description={t.soFar.work.positions.fullStackEngineer2019.description}
          />

          <TimelineItem
            year={t.soFar.work.positions.frontendEngineer.year}
            title={t.soFar.work.positions.frontendEngineer.title}
            company={t.soFar.work.positions.frontendEngineer.company}
            period={t.soFar.work.positions.frontendEngineer.period}
            description={t.soFar.work.positions.frontendEngineer.description}
          />

          <TimelineItem
            year={t.soFar.work.positions.intern.year}
            title={t.soFar.work.positions.intern.title}
            company={t.soFar.work.positions.intern.company}
            period={t.soFar.work.positions.intern.period}
            description={t.soFar.work.positions.intern.description}
          />
        </div>
      </div>
    </section>

    <section id="projects" class="mb-16">
      <h2 class="mb-4 font-serif text-2xl leading-tight">
        {t.soFar.projects.title}
      </h2>

      <p class="mb-8 text-base leading-relaxed text-[color:var(--color-text-secondary)]">
        {t.soFar.projects.description}
      </p>

      <!-- Work Projects -->
      <div class="mb-12">
        <h3 class="mb-8 font-serif text-xl text-[color:var(--color-text-primary)]">
          {t.soFar.projects.workProjects.title}
        </h3>
        <div class="space-y-8">
          <!-- X-Elephant -->
          <div class="border-l border-[color:var(--color-border)] pl-6">
            <div class="mb-4">
              <h4 class="mb-2 font-serif text-lg text-[color:var(--color-text-primary)]">
                {t.soFar.projects.workProjects.xElephant.title}
              </h4>
              <p class="text-sm font-medium text-[color:var(--color-text-tertiary)]">
                {t.soFar.projects.workProjects.xElephant.company}
              </p>
            </div>
            <div
              class="space-y-3 text-base leading-relaxed text-[color:var(--color-text-secondary)]"
            >
              <p>
                {t.soFar.projects.workProjects.xElephant.description}
              </p>
              <p>
                <span class="font-medium text-[color:var(--color-text-primary)]">
                  {t.soFar.projects.workProjects.xElephant.details.ragOptimization.label}
                </span>
                {t.soFar.projects.workProjects.xElephant.details.ragOptimization.text}
              </p>
              <p>
                <span class="font-medium text-[color:var(--color-text-primary)]">
                  {t.soFar.projects.workProjects.xElephant.details.dataPipeline.label}
                </span>
                {t.soFar.projects.workProjects.xElephant.details.dataPipeline.text}
              </p>
            </div>
          </div>

          <!-- EverCraft -->
          <div class="border-l border-[color:var(--color-border)] pl-6">
            <div class="mb-4">
              <h4 class="mb-2 font-serif text-lg text-[color:var(--color-text-primary)]">
                {t.soFar.projects.workProjects.everCraft.title}
              </h4>
              <p class="text-sm font-medium text-[color:var(--color-text-tertiary)]">
                {t.soFar.projects.workProjects.everCraft.company}
              </p>
            </div>
            <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
              {t.soFar.projects.workProjects.everCraft.description}
            </p>
          </div>

          <!-- EverCraft Lite -->
          <div class="border-l border-[color:var(--color-border)] pl-6">
            <div class="mb-4">
              <h4 class="mb-2 font-serif text-lg text-[color:var(--color-text-primary)]">
                {t.soFar.projects.workProjects.everCraftLite.title}
              </h4>
              <p class="text-sm font-medium text-[color:var(--color-text-tertiary)]">
                {t.soFar.projects.workProjects.everCraftLite.company}
              </p>
            </div>
            <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
              {t.soFar.projects.workProjects.everCraftLite.description}
            </p>
          </div>

          <!-- fractal3D -->
          <div class="border-l border-[color:var(--color-border)] pl-6">
            <div class="mb-4">
              <h4 class="mb-2 font-serif text-lg text-[color:var(--color-text-primary)]">
                {t.soFar.projects.workProjects.fractal3D.title}
              </h4>
              <p class="text-sm font-medium text-[color:var(--color-text-tertiary)]">
                {t.soFar.projects.workProjects.fractal3D.company}
              </p>
            </div>
            <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
              {t.soFar.projects.workProjects.fractal3D.description}
            </p>
          </div>
        </div>
      </div>

      <!-- Personal Projects -->
      <div>
        <h3 class="mb-6 font-serif text-lg text-[color:var(--color-text-primary)]">
          {t.soFar.projects.personalProjects.title}
        </h3>
        <div class="space-y-6">
          <ProjectItem
            title={t.soFar.projects.personalProjects.sealbox.title}
            description={t.soFar.projects.personalProjects.sealbox.description}
            githubUrl="https://github.com/realmorrisliu/sealbox"
          />
          <p class="mt-2 ml-0 text-sm text-[color:var(--color-text-tertiary)]">
            {currentLang === 'en' ? 
              `${t.soFar.projects.personalProjects.sealbox.readMore} ` : 
              '→ 在'}
            <Link href="/thoughts/why-i-built-sealbox">
              {currentLang === 'en' ? 'Why I Built Sealbox' : '《为什么我做Sealbox》'}
            </Link>
            {currentLang === 'zh' && '中看这个项目背后的故事'}
          </p>

          <ProjectItem
            title={t.soFar.projects.personalProjects.openrouterRs.title}
            description={t.soFar.projects.personalProjects.openrouterRs.description}
            githubUrl="https://github.com/realmorrisliu/openrouter-rs"
          />

          <ProjectItem
            title={t.soFar.projects.personalProjects.funcall.title}
            description={t.soFar.projects.personalProjects.funcall.description}
            githubUrl="https://github.com/realmorrisliu/funcall"
          />

          <ProjectItem
            title={t.soFar.projects.personalProjects.kira.title}
            description={t.soFar.projects.personalProjects.kira.description}
          />
          <p class="mt-2 ml-0 text-sm text-[color:var(--color-text-tertiary)]">
            {currentLang === 'en' ? 
              `${t.soFar.projects.personalProjects.kira.readMore} ` : 
              '→ 在'}
            <Link href="/thoughts/building-kira-an-ai-native-second-brain">
              {currentLang === 'en' ? 'Building Kira: An AI-Native Second Brain' : '《构建 Kira：一个 AI 原生的第二大脑》'}
            </Link>
            {currentLang === 'zh' && '中了解更多的愿景和设计理念'}
          </p>
        </div>
      </div>
    </section>

    <section id="skills" class="mb-16">
      <h2 class="mb-4 font-serif text-2xl leading-tight">
        {t.soFar.skills.title}
      </h2>
      <div class="space-y-4">
        <div>
          <h3 class="mb-2 font-serif text-base text-[color:var(--color-text-primary)]">
            {t.soFar.skills.languages.title}
          </h3>
          <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
            {t.soFar.skills.languages.description}
          </p>
        </div>

        <div>
          <h3 class="mb-2 font-serif text-base text-[color:var(--color-text-primary)]">
            {t.soFar.skills.infrastructure.title}
          </h3>
          <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
            {t.soFar.skills.infrastructure.description}
          </p>
        </div>

        <div>
          <h3 class="mb-2 font-serif text-base text-[color:var(--color-text-primary)]">
            {t.soFar.skills.dataAndInterfaces.title}
          </h3>
          <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
            {t.soFar.skills.dataAndInterfaces.description}
          </p>
        </div>

        <div>
          <h3 class="mb-2 font-serif text-base text-[color:var(--color-text-primary)]">
            {t.soFar.skills.leadership.title}
          </h3>
          <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
            {t.soFar.skills.leadership.description}
          </p>
        </div>
      </div>
    </section>

    <section id="side" class="mb-16">
      <h2 class="mb-4 font-serif text-2xl leading-tight">
        {t.soFar.side.title}
      </h2>
      <div class="space-y-4">
        <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
          <FormattedText 
            text={t.soFar.side.bass}
            replacements={[
              { placeholder: '{queen}', href: 'https://en.wikipedia.org/wiki/Queen_(band)', label: 'Queen' },
              { placeholder: '{chic}', href: 'https://en.wikipedia.org/wiki/Chic_(band)', label: 'Chic' },
              { placeholder: '{ewf}', href: 'https://en.wikipedia.org/wiki/Earth,_Wind_%26_Fire', label: currentLang === 'en' ? 'EW&F' : 'Earth, Wind & Fire' },
              { placeholder: '{acdc}', href: 'https://en.wikipedia.org/wiki/AC/DC', label: 'AC/DC' }
            ]}
          />
        </p>

        <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
          <FormattedText 
            text={t.soFar.side.photography}
            replacements={[
              { placeholder: '{cartierBresson}', href: 'https://en.wikipedia.org/wiki/Henri_Cartier-Bresson', label: currentLang === 'en' ? 'Henri Cartier-Bresson' : '卡蒂埃-布列松' },
              { placeholder: '{hideakiHamada}', href: 'https://hideakihamada.com/about/', label: currentLang === 'en' ? 'Hideaki Hamada' : '滨田英明' }
            ]}
          />
        </p>

        <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
          {t.soFar.side.philosophy}
        </p>

        <div class="mt-6 border-t border-[color:var(--color-border)] pt-4">
          <p class="mb-2 font-serif text-sm text-[color:var(--color-text-tertiary)]">
            {t.soFar.side.gear.title}
          </p>
          <div class="space-y-1 text-sm text-[color:var(--color-text-tertiary)]">
            <p>{t.soFar.side.gear.bass}</p>
            <p>{t.soFar.side.gear.camera}</p>
          </div>
        </div>
      </div>
    </section>

    <section id="contact" class="mb-16">
      <h2 class="mb-4 font-serif text-2xl leading-tight">
        {t.soFar.contact.title}
      </h2>
      <div class="space-y-4">
        <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
          <FormattedText 
            text={t.soFar.contact.github}
            replacements={[
              { placeholder: '{github}', href: 'https://github.com/realmorrisliu', label: 'GitHub' }
            ]}
          />
        </p>

        <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
          <FormattedText 
            text={t.soFar.contact.twitter}
            replacements={[
              { placeholder: '{twitter}', href: 'https://twitter.com/realmorrisliu', label: 'X (Twitter)' }
            ]}
          />
        </p>

        <p class="text-base leading-relaxed text-[color:var(--color-text-secondary)]">
          <FormattedText 
            text={t.soFar.contact.email}
            replacements={[
              { placeholder: '{email}', href: 'mailto:morrisliu1994@outlook.com', label: 'morrisliu1994@outlook.com' }
            ]}
          />
        </p>
      </div>
    </section>

    <FooterSignature>
      <nav class="mt-2">
        <Link href="/" class="text-sm">
          {t.soFar.footer.backToMain}
        </Link>
      </nav>
    </FooterSignature>
  </div>
</Layout>
