---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

const articles = [
  {
    title: "Why I Built Sealbox",
    date: "June 15, 2025",
    excerpt:
      "A deep dive into the motivations and challenges behind building Sealbox.",
  },
  {
    title: "Rust Type-Driven APIs",
    date: "May 20, 2025",
    excerpt:
      "Exploring how Rust's type system can guide API design for better safety and clarity.",
  },
];
---

<Layout>
  <div class="max-w-2xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-serif mb-12">Thoughts</h1>
    <div class="space-y-12">
      {
        articles.map((article) => (
          <article class="border-b border-gray-100 pb-8">
            <div class="mb-1">
              <h2 class="text-xl font-medium">{article.title}</h2>
              <time class="text-sm font-normal text-gray-500">
                {article.date}
              </time>
            </div>
            <p class="text-gray-700 font-normal">{article.excerpt}</p>
          </article>
        ))
      }
    </div>
  </div>
</Layout>
