---
import Layout from "@/layouts/Layout.astro";
import { SignedIn, SignedOut, SignInButton } from "@clerk/astro/components";
import { KiraApp } from "@/components/kira/KiraApp";
---

<Layout title="Kira - AI Agent">
  <main class="h-screen w-full bg-gray-50">
    <SignedIn>
      <KiraApp client:only="react" />
    </SignedIn>
    <SignedOut>
      <div class="flex h-full flex-col items-center justify-center gap-6 bg-gray-900 text-white">
        <div class="text-center">
          <h1 class="text-4xl font-bold">Kira</h1>
          <p class="mt-2 text-gray-400">Your AI-native second brain.</p>
        </div>
        <SignInButton
          mode="modal"
          class="rounded-full bg-white px-6 py-2 text-sm font-medium text-black transition-transform hover:scale-105 active:scale-95"
        >
          Sign In
        </SignInButton>
      </div>
    </SignedOut>
  </main>
</Layout>
