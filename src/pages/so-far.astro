---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <div class="max-w-2xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-serif mb-12">So Far</h1>

    <section id="work" class="mb-12">
      <h2 class="text-xl font-medium mb-2">Work</h2>
      <p class="text-gray-700 font-normal">
        Details about professional experience.
      </p>
    </section>

    <section id="skills" class="mb-12">
      <h2 class="text-xl font-medium mb-2">Skills</h2>
      <p class="text-gray-700 font-normal">
        Technical and professional skills.
      </p>
    </section>

    <section id="projects" class="mb-12">
      <h2 class="text-xl font-medium mb-2">Projects</h2>
      <p class="text-gray-700 font-normal">
        Notable projects and contributions.
      </p>
    </section>

    <section id="side" class="mb-12">
      <h2 class="text-xl font-medium mb-2">Side</h2>
      <p class="text-gray-700 font-normal">Personal interests and hobbies.</p>
    </section>

    <section id="contact" class="mb-12">
      <h2 class="text-xl font-medium mb-2">Contact</h2>
      <p class="text-gray-700 font-normal">Ways to get in touch.</p>
    </section>
  </div>
</Layout>
