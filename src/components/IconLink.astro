---
import { cn } from "@utils/index";

export interface Props {
  href: string;
  class?: string;
  title?: string;
  ariaLabel?: string;
}

const { href, class: className = "", title, ariaLabel } = Astro.props;
---

<a
  href={href}
  class={cn(
    "inline-flex text-text-secondary md:opacity-80 opacity-100 md:hover:opacity-100 transition-opacity duration-150",
    className
  )}
  title={title}
  aria-label={ariaLabel}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>
