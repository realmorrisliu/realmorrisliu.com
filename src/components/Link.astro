---
import { cn } from "../utils/index";

export interface Props {
  id?: string;
  href: string;
  class?: string;
  external?: boolean;
}

const { id, href, class: className = "", external } = Astro.props;

// Auto-detect external links (only for target="_blank")
const isExternal = external || href.startsWith("http") || href.startsWith("mailto:");
---

<a
  id={id}
  href={href}
  class={cn(
    "font-medium text-text-link underline decoration-1 underline-offset-2 hover:text-text-primary transition-all duration-150",
    className
  )}
  {...isExternal && { target: "_blank", rel: "noopener noreferrer" }}><slot /></a
>
