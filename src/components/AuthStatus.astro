---
import { SignedIn, SignedOut, UserButton, SignInButton } from "@clerk/astro/components";
import { cn } from "@/utils";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div
  class={cn(
    "fixed bottom-6 right-6 z-50 flex items-center gap-2 rounded-full bg-white/80 p-1.5 shadow-lg backdrop-blur-md transition-all duration-300 hover:scale-105 hover:bg-white/90 dark:bg-zinc-800/80 dark:hover:bg-zinc-800/90 border border-zinc-200/50 dark:border-zinc-700/50",
    className
  )}
>
  <SignedOut>
    <SignInButton
      mode="modal"
      class="flex h-8 items-center rounded-full px-4 text-sm font-medium text-zinc-700 transition-colors hover:text-zinc-900 dark:text-zinc-200 dark:hover:text-white"
    >
      Sign In
    </SignInButton>
  </SignedOut>
  <SignedIn>
    <UserButton
      appearance={{
        elements: {
          avatarBox: "w-8 h-8 ring-2 ring-white/50 dark:ring-zinc-700/50",
          userButtonTrigger: "focus:shadow-none focus:outline-none",
        },
      }}
    />
  </SignedIn>
</div>
