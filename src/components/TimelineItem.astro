---
export interface Props {
  year: string;
  title: string;
  company: string;
  period: string;
  description: string;
}

const { year, title, company, period, description } = Astro.props;
---

<div class="relative pl-6">
  <!-- 年份悬浮在左边 -->
  <div class="absolute top-0 -left-16 w-12 text-right">
    <span class="font-sans text-sm text-[color:var(--color-text-tertiary)]">{year}</span>
  </div>

  <!-- 主要内容区域，与时间线对齐 -->
  <div>
    <div class="mb-3">
      <h3 class="mb-1 font-serif text-lg leading-tight text-[color:var(--color-text-primary)]">
        {title}
      </h3>
      <p class="font-sans text-sm text-[color:var(--color-text-tertiary)]">
        {company} • {period}
      </p>
    </div>
    <p
      class="font-sans text-base leading-relaxed text-[color:var(--color-text-secondary)]"
      set:html={description}
    />
  </div>
</div>
