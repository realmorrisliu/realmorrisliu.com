---
export interface Props {
  year: string;
  title: string;
  company: string;
  period: string;
  description: string;
  descriptionZh?: string;
}

const { year, title, company, period, description, descriptionZh } = Astro.props;
---

<div class="relative pl-6">
  <!-- Year floating on the left -->
  <div class="absolute top-0 -left-16 w-12 text-right">
    <span class="font-sans text-sm text-[color:var(--color-text-tertiary)]">{year}</span>
  </div>

  <!-- Main content area, aligned with timeline -->
  <div>
    <div class="mb-3">
      <h3 class="mb-1 font-serif text-lg leading-tight text-[color:var(--color-text-primary)]">
        {title}
      </h3>
      <p class="font-sans text-sm text-[color:var(--color-text-tertiary)]">
        {company} â€¢ {period}
      </p>
    </div>
    <p class="font-sans text-base leading-relaxed text-[color:var(--color-text-secondary)]">
      <span class="lang-en">{description}</span>
      {descriptionZh && <span class="lang-zh">{descriptionZh}</span>}
    </p>
  </div>
</div>
