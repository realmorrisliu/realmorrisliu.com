---
import Link from "./Link.astro";

export interface Props {
  author?: string;
  showNavigation?: boolean;
  navigationItems?: Array<{
    href: string;
    label: string;
  }>;
}

const { author = "Morris Liu", showNavigation = false, navigationItems = [] } = Astro.props;
---

<footer class="mt-24 pt-8">
  {
    showNavigation && navigationItems.length > 0 && (
      <nav class="mb-6">
        <div class="flex gap-4 text-sm text-[color:var(--color-text-tertiary)]">
          {navigationItems.map(item => (
            <Link href={item.href} class="text-sm">
              {item.label}
            </Link>
          ))}
        </div>
      </nav>
    )
  }

  <div class="text-base text-[color:var(--color-text-primary)]">
    {author}
  </div>

  <!-- Optional slot for custom navigation -->
  <slot />
</footer>
