---
import Link from "./Link.astro";

export interface Props {
  author?: string;
  translator?: string;
  showNavigation?: boolean;
  navigationItems?: Array<{
    href: string;
    label: string;
  }>;
}

const {
  author = "Morris Liu",
  translator,
  showNavigation = false,
  navigationItems = [],
} = Astro.props;
---

<footer class="mt-24 pt-8">
  {
    showNavigation && navigationItems.length > 0 && (
      <nav class="mb-6">
        <div class="text-text-tertiary flex gap-4 text-sm">
          {navigationItems.map(item => (
            <Link href={item.href} class="text-sm">
              {item.label}
            </Link>
          ))}
        </div>
      </nav>
    )
  }

  {
    translator ? (
      <div class="flex items-center">
        <span class="text-text-tertiary mr-1">translated by</span>
        {translator}
      </div>
    ) : (
      <div class="text-text-primary flex items-center justify-between text-base">{author}</div>
    )
  }

  <!-- Optional slot for custom navigation -->
  <slot />
</footer>
