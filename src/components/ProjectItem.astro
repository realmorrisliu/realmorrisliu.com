---
import GitHubIcon from "./GitHubIcon.astro";

export interface Props {
  title: string;
  description: string;
  githubUrl?: string;
}

const { title, description, githubUrl } = Astro.props;
---

<div>
  <h3 class="text-text-primary mb-2 flex items-center gap-2 font-serif text-lg">
    {title}
    {githubUrl && <GitHubIcon href={githubUrl} />}
  </h3>
  <p class="text-text-secondary font-sans text-base leading-relaxed">
    {description}
  </p>
</div>
