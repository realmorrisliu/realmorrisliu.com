---
import GitHubIcon from "./GitHubIcon.astro";

export interface Props {
  title: string;
  description: string;
  descriptionZh?: string;
  githubUrl?: string;
}

const { title, description, descriptionZh, githubUrl } = Astro.props;
---

<div>
  <h3
    class="mb-2 flex items-center gap-2 font-serif text-lg text-[color:var(--color-text-primary)]"
  >
    {title}
    {githubUrl && <GitHubIcon href={githubUrl} />}
  </h3>
  <p class="font-sans text-base leading-relaxed text-[color:var(--color-text-secondary)]">
    <span class="lang-en">{description}</span>
    {descriptionZh && <span class="lang-zh">{descriptionZh}</span>}
  </p>
</div>
